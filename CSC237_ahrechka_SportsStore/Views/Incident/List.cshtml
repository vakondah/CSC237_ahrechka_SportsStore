@model IncidentListViewModel

@{
    ViewData["Title"] = "Incident Manager";
}

<h1>Incident Manager</h1>

<nav class="nav nav-pills mb-3">
    <a asp-action="Filter" asp-route-id="all" my-filter="@Model.Filter"
       class="nav-item nav-link">All Incidents</a>
       
    <a asp-action="Filter" asp-route-id="unassigned" my-filter="@Model.Filter"
       class="nav-item nav-link">Unassigned Incidents</a>

    <a asp-action="Filter" asp-route-id="open" my-filter="@Model.Filter"
       class="nav-item nav-link">Open Incidents</a>
</nav>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model.Incidents)
        {
            <tr>
                <td>@incident.Title</td>
                <td>@incident.Customer.FullName</td>
                <td>@incident.Product.Name</td>
                <td>@incident.DateOpened.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@incident.IncidentID"
                       class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@incident.IncidentID"
                       class="btn btn-primary">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-primary mb-3">Add Incident</a>
