@model List<Customer>

@{
    ViewData["Title"] = "Customer Manager";
}
<h1>Customer Manager</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@customer.CustomerID"
                       class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@customer.CustomerID"
                       class="btn btn-primary">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-primary mb-3">Add Customer</a>
