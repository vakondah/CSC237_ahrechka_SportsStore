@model TechIncidentViewModel

@{
    ViewBag.Title = "Edit Incident";
}


@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label class="w-25">Technician: </label>
        <label>@Model.Technician.Name</label>
    </div>
    <div class="form-group">
        <label class="w-25">Customer: </label>
        <label>@Model.Incident.Customer.FullName</label>
    </div>
    <div class="form-group">
        <label class="w-25">Product: </label>
        <label>@Model.Incident.Product.Name</label>
    </div>
    <div class="form-group">
        <label class="w-25">Title: </label>
        <label>@Model.Incident.Title</label>
    </div>
    <div class="form-group">
        <label class="w-25">Date Opened: </label>
        <label>@Model.Incident.DateOpened</label>
    </div>
    <div class="form-group">
        <label asp-for="Incident.Description">Description: </label>
        <textarea asp-for="Incident.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Incident.DateClosed">Date Closed: </label>
        <input type="text" asp-for="Incident.DateClosed" class="form-control" />
    </div>

    <input type="hidden" asp-for="Incident.IncidentID" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" asp-route-id="@Model.Technician.TechnicianID"
       class="btn btn-primary">Cancel</a>
</form>